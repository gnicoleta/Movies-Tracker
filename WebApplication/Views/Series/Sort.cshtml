@model IEnumerable<WebApplication.DatabaseModels.Series>

@{
    ViewBag.Title = "Sort";
}

<h2>Sorted</h2>

<table class="table">
    <tr>

        <th>
            Image
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Review)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Seasons)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>

        <td>
            <img src="@item.Path" style="max-width:400px;max-height:200px;" />
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            <!-- <pre>  -->
            @Html.DisplayFor(modelItem => item.Review)
            <!-- </pre>  -->
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Seasons)
        </td>
    </tr>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>


</table>
